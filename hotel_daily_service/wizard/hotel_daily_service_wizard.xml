<?xml version="1.0"?>
<odoo>
    <record id="hotel_daily_service_wizard_view" model="ir.ui.view">
        <field name="name">Hotel Daily Service Line</field>
        <field name="model">hotel.daily.service.line.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="hotel_folio_id" invisible="1"/>
                <group>
                    <group>
                        <field name="hotel_service_id"/>
                        <field name="include_checkin_day"/>
                    </group>
                    <group>
                        <field name="quantity"/>
                    </group>
                </group>
                <footer>
                    <button type="object"
                            name="add_daily_service_line"
                            string="Add Daily Service Lines"
                            class="oe_highlight"/>
                    <button special="cancel"
                            string="Cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="hotel_daily_service_wizard_view_action" model="ir.actions.act_window">
        <field name="name">Hotel Daily Service Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.daily.service.line.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
