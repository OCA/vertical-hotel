<?xml version="1.0" encoding="UTF-8"?>

<templates>

    <t t-name="hotel_room_reservation_summary_table_template">
        <div style="overflow:auto;">
            <table border="1">
                <t t-foreach="widget.get('summary_header')" t-as="header_detail">
                    <tr>
                        <t t-foreach="header_detail.header" t-as="date">
                            <th class="table_header" style="text-align:center;">
                                <t t-esc="date"/>
                            </th>
                        </t>
                    </tr>
                </t>
                <t t-foreach="widget.get('room_summary')" t-as="detail">
                    <tr>
                        <td style="text-align:center;">
                            <t t-esc="detail.name"/>
                        </td>
                        <t t-foreach="detail.value" t-as="status">
                                <td t-attf-class="table_#{status.state}" t-att-data="status.room_id" t-att-date="status.date" style="text-align:center;">
                                    <t t-esc="status.state_text"/>
                                </td>
                        </t>
                    </tr>
                </t>
            </table>
        </div>
    </t>
</templates>
