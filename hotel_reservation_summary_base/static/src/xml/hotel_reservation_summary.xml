<?xml version="1.0" encoding="UTF-8"?>

<templates>

    <t t-name="hotel_room_reservation_summary_table_template">
        <div style="overflow:auto;">
            <table border="1">
                <t t-foreach="widget.get('room_summary')"
                   t-as="week_data">
                    <tr>
                        <t t-foreach="week_data.headers" t-as="header">
                            <th class="table_header" style="text-align:center;">
                                <t t-esc="header"/>
                            </th>
                        </t>
                    </tr>
                    <t t-foreach="week_data.rows" t-as="row">
                        <tr>
                            <td t-attf-class="table_room"
                                t-att-room_id="row.room_id">
                                <t t-esc="row.name"/>
                            </td>
                            <t t-foreach="row.value" t-as="status">
                                <td t-attf-class="table_#{status.state}"
                                    t-att-data="status.room_id"
                                    t-att-date="status.date"
                                    style="text-align:center;">
                                    <t t-esc="status.state_text"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </t>
            </table>
        </div>
    </t>
</templates>
