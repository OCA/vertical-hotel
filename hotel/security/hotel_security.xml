<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE xml>
<odoo noupdate="1">

    <!--Group for hotel user -->
    <record id="group_hotel_user" model="res.groups">
        <field name="name">Hotel Management / User</field>
        <field eval="[(4, ref('base.user_root'))]" name="implied_ids" />
    </record>

    <!--Group for hotel manager -->
    <record id="group_hotel_manager" model="res.groups">
        <field name="name">Hotel Management/ Manager</field>
        <field eval="[(4, ref('hotel.group_hotel_user'))]" name="implied_ids" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>

    <record id="hotel_folio_rule" model="ir.rule">
        <field name="name">Folio Multi company</field>
        <field name="model_id" ref="hotel.model_hotel_folio"/>
        <field name="global" eval="True"/>
        <field
            name="domain_force"
        >['|',('company_id','=',False),('company_id', 'in', company_ids)]
        </field>
    </record>

