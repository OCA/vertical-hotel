<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view of hotel tourist tax -->
    <record id="view_hotel_tourist_tax_form" model="ir.ui.view">
        <field name="name">hotel.tourist.tax.form</field>
        <field name="model">hotel.tourist.tax</field>
        <field name="arch" type="xml">
            <form string="Hotel Tourist Tax">
                <sheet>
                    <label for="name" string="Name"/>
                    <h1>
                        <field name="name" select="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="amount"/>
                            <field name="per_night"/>
                            <field name="per_person"/>
                            <field name="count_adults" attrs="{'invisible': [('per_person', '=', False)]}"/>
                            <field name="count_children" attrs="{'invisible': [('per_person', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="auto_apply"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view of hotel tourist tax -->
    <record id="view_hotel_tourist_tax_tree" model="ir.ui.view">
        <field name="name">hotel.tourist.tax.tree</field>
        <field name="model">hotel.tourist.tax</field>
        <field name="arch" type="xml">
            <tree string="Hotel Tourist Tax">
                <field name="name"/>
                <field name="auto_apply"/>
                <field name="per_night"/>
                <field name="per_person"/>
                <field name="count_adults"/>
                <field name="count_children"/>
            </tree>
        </field>
    </record>

    <record id="action_hotel_tourist_tax_form" model="ir.actions.act_window">
        <field name="name">Tourist Tax</field>
        <field name="res_model">hotel.tourist.tax</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Tourist Tax" id="menu_open_hotel_tourist_tax_form"
              action="action_hotel_tourist_tax_form" sequence="8"
              parent="hotel.hotel_configuration_menu"/>

</odoo>
